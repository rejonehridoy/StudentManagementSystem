@model StudentManagementSystem.Models.Language

@{
    ViewData["Title"] = "SelectLanguage";
}

<h4>Select Language</h4>
<hr />
<div class="row">
    <form asp-action="SelectLanguage">
        <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <label class="control-label"> Select Language</label>
            <select class="form-control mb-1 w-100" asp-for="LanguageId"
                    asp-items="@(new SelectList(ViewBag.LanguageList,"LanguageId", "Name"))">
            </select>
            <span asp-validation-for="LanguageId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Select" class="btn btn-primary" />

        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
