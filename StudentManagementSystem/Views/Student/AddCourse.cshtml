@model StudentManagementSystem.Models.StudentCourse

@{
    ViewData["Title"] = "AddCourse";
}

<h4>Add New Course to student</h4>
<hr />
<div class="row">
    <form asp-action="AddCourse">
        <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <label class="control-label"> Select Course</label>
            <select class="form-control mb-1" asp-for="CourseId"
                    asp-items="@(new SelectList(ViewBag.CourseList,"CourseId", "Name"))">
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
            
        </div>
    </form>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.StudentId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
